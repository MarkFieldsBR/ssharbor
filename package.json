{
  "name": "ssharbor",
  "displayName": "SSHarbor",
  "description": "Your safe harbor for SSH connections - Organize fleets, connect vessels with confidence",
  "version": "1.0.0",
  "publisher": "marcostullyo",
  "author": {
    "name": "Marcos Tullyo",
    "email": "mtullyoc@gmail.com"
  },
  "license": "MIT",
  "sponsor": {
    "url": "https://ko-fi.com/marcostullyo"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/markfields/ssharbor"
  },
  "icon": "resources/icon.png",
  "galleryBanner": {
    "color": "#1a365d",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Keymaps"
  ],
  "keywords": [
    "ssh",
    "remote",
    "terminal",
    "server",
    "connection",
    "harbor"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "contributes": {
    "configuration": {
      "title": "SSHarbor",
      "properties": {
        "ssharbor.defaultShell": {
          "type": "string",
          "default": "/bin/zsh",
          "description": "Default shell to use after SSH connection"
        },
        "ssharbor.defaultUser": {
          "type": "string",
          "default": "root",
          "description": "Default SSH user"
        },
        "ssharbor.defaultPort": {
          "type": "number",
          "default": 22,
          "description": "Default SSH port"
        },
        "ssharbor.showRecentConnections": {
          "type": "boolean",
          "default": true,
          "description": "Show recent connections fleet"
        },
        "ssharbor.maxRecentConnections": {
          "type": "number",
          "default": 5,
          "description": "Maximum number of recent connections to show"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ssharbor",
          "title": "SSHarbor",
          "icon": "resources/icons/anchor.svg"
        }
      ]
    },
    "views": {
      "ssharbor": [
        {
          "id": "ssharbor.harbor",
          "name": "Harbor",
          "icon": "resources/icons/anchor.svg",
          "contextualTitle": "SSHarbor"
        },
        {
          "id": "ssharbor.vesselDetail",
          "name": "Vessel Details",
          "type": "webview",
          "contextualTitle": "Vessel Details",
          "visibility": "visible"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "ssharbor.harbor",
        "contents": "Welcome to SSHarbor!\n\nYour safe harbor for SSH connections.\n\n[Create your first Fleet](command:ssharbor.createFleet)\n\n[Open Configuration](command:ssharbor.editConfig)\n\n[Learn more](https://github.com/markfields/ssharbor)"
      }
    ],
    "commands": [
      {
        "command": "ssharbor.connect",
        "title": "Board the Vessel",
        "category": "SSHarbor",
        "icon": "$(rocket)"
      },
      {
        "command": "ssharbor.connectNewWindow",
        "title": "Open SSH Terminal",
        "category": "SSHarbor",
        "icon": "$(terminal)"
      },
      {
        "command": "ssharbor.quickConnect",
        "title": "Quick Connect",
        "category": "SSHarbor",
        "icon": "$(zap)"
      },
      {
        "command": "ssharbor.createFleet",
        "title": "Create Fleet",
        "category": "SSHarbor",
        "icon": "$(add)"
      },
      {
        "command": "ssharbor.addVessel",
        "title": "Commission New Vessel",
        "category": "SSHarbor",
        "icon": "$(add)"
      },
      {
        "command": "ssharbor.editConfig",
        "title": "Edit Configuration",
        "category": "SSHarbor",
        "icon": "$(edit)"
      },
      {
        "command": "ssharbor.refresh",
        "title": "Refresh Harbor",
        "category": "SSHarbor",
        "icon": "$(refresh)"
      },
      {
        "command": "ssharbor.copyCommand",
        "title": "Copy SSH Command",
        "category": "SSHarbor",
        "icon": "$(copy)"
      },
      {
        "command": "ssharbor.copyHost",
        "title": "Copy Host",
        "category": "SSHarbor",
        "icon": "$(link)"
      },
      {
        "command": "ssharbor.toggleFavorite",
        "title": "Toggle Favorite",
        "category": "SSHarbor",
        "icon": "$(star)"
      },
      {
        "command": "ssharbor.editVessel",
        "title": "Edit Vessel",
        "category": "SSHarbor",
        "icon": "$(edit)"
      },
      {
        "command": "ssharbor.removeVessel",
        "title": "Scuttle the Vessel",
        "category": "SSHarbor",
        "icon": "$(trash)"
      },
      {
        "command": "ssharbor.reconnect",
        "title": "Reconnect to Last",
        "category": "SSHarbor",
        "icon": "$(debug-restart)"
      },
      {
        "command": "ssharbor.removeFleet",
        "title": "Decommission Fleet",
        "category": "SSHarbor",
        "icon": "$(trash)"
      },
      {
        "command": "ssharbor.saveCurrentFolder",
        "title": "Save Current Folder",
        "category": "SSHarbor",
        "icon": "$(save)"
      }
    ],
    "keybindings": [
      {
        "command": "ssharbor.quickConnect",
        "key": "cmd+shift+s",
        "mac": "cmd+shift+s",
        "win": "ctrl+shift+s",
        "linux": "ctrl+shift+s"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "ssharbor.createFleet",
          "when": "view == ssharbor.harbor",
          "group": "navigation@1"
        },
        {
          "command": "ssharbor.quickConnect",
          "when": "view == ssharbor.harbor",
          "group": "navigation@2"
        },
        {
          "command": "ssharbor.refresh",
          "when": "view == ssharbor.harbor",
          "group": "navigation@3"
        },
        {
          "command": "ssharbor.editConfig",
          "when": "view == ssharbor.harbor",
          "group": "navigation@4"
        }
      ],
      "view/item/context": [
        {
          "command": "ssharbor.connect",
          "when": "view == ssharbor.harbor && viewItem == vessel",
          "group": "inline@1"
        },
        {
          "command": "ssharbor.connect",
          "when": "view == ssharbor.harbor && viewItem == vessel",
          "group": "1_connect@1"
        },
        {
          "command": "ssharbor.connectNewWindow",
          "when": "view == ssharbor.harbor && viewItem == vessel",
          "group": "1_connect@2"
        },
        {
          "command": "ssharbor.copyCommand",
          "when": "view == ssharbor.harbor && viewItem == vessel",
          "group": "2_copy@1"
        },
        {
          "command": "ssharbor.copyHost",
          "when": "view == ssharbor.harbor && viewItem == vessel",
          "group": "2_copy@2"
        },
        {
          "command": "ssharbor.toggleFavorite",
          "when": "view == ssharbor.harbor && viewItem == vessel",
          "group": "3_actions@1"
        },
        {
          "command": "ssharbor.editVessel",
          "when": "view == ssharbor.harbor && viewItem == vessel",
          "group": "3_actions@2"
        },
        {
          "command": "ssharbor.removeVessel",
          "when": "view == ssharbor.harbor && viewItem == vessel",
          "group": "4_danger@1"
        },
        {
          "command": "ssharbor.addVessel",
          "when": "view == ssharbor.harbor && viewItem == fleet",
          "group": "inline@1"
        },
        {
          "command": "ssharbor.removeFleet",
          "when": "view == ssharbor.harbor && viewItem == fleet",
          "group": "inline@2"
        },
        {
          "command": "ssharbor.addVessel",
          "when": "view == ssharbor.harbor && viewItem == fleet",
          "group": "1_fleet@1"
        },
        {
          "command": "ssharbor.removeFleet",
          "when": "view == ssharbor.harbor && viewItem == fleet",
          "group": "2_danger@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "pretest": "npm run compile",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  }
}
